{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../../target/www/app",
        "baseUrl": "./",
        "types": [
            "node"
        ],
        "paths": {
            "@shared": [
                "app/shared/index"
            ],
            "@shared/*": [
                "app/shared/*"
            ],
            "@core": [
                "app/core/index"
            ],
            "@core/*": [
                "app/core/*"
            ],
            "@env/*": [
                "environments/*"
            ]
        }
    },
    "include": [
        "main.ts",
        "polyfills.ts"
    ],
    "exclude": [
        "test.ts",
        "**/*.spec.ts"
    ]
}
